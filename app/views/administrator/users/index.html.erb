<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <table class="table table-bordered">
          <thead>
          <tr>
            <th></th>
            <%= content_tag(:th, User.human_attribute_name('firstName')) %>
            <%= content_tag(:th, User.human_attribute_name('role')) %>
            <%= content_tag(:th, User.human_attribute_name('email')) %>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
          <tr>
            <td></td>
            <td class="text-center">
              <%= link_to user.fullname, administrator_user_path(user) %>
            </td>
            <td></td>
            <td class="text-center">
              <%= mail_to user.email %>
            </td>
            <td class="text-right">
              <div class="btn-group btn-group-sm">
                <%= link_to edit_administrator_user_path(user), class: 'btn btn-warning' do %>
                  <i class="mdi mdi-gauge"></i>
                <% end %>
                <%= link_to '#', class: 'btn btn-danger' do %>
                  <i class="mdi mdi-gauge"></i>
                <% end %>
              </div>
            </td>
          </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>